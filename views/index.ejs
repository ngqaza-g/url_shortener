<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <title>URL Shortener</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center">URL Shortener</h1>

        <form action="/shortUrls" method="POST" class="my-4 form-inline col">
            <div class="input-group">
                <label for"fullUrl" class="visually-hidden">URL</label>
                <input type="url" name="fullUrl" id="fullUrl" placeholder="Url" class="form-control"/>
                <button class="btn btn-success" type="submit">Shrink</button>

            </div>
        </form>
    
        <table class="table table-striped table-responsive">
            <tr>
                <th>Full Url</th>
                <th>Short Url</th>
                <th>Cliks</th>
            </tr>
    
            <tbody>
                <% shortUrls.forEach(shortUrl =>{%>
                    <tr>
                        <td>
                            <a href="<%= shortUrl.full%>"><%= shortUrl.full%></a>
                        </td>
                        <td>
                            <a href="/<%= shortUrl.short%>"><%= shortUrl.short%></a>
                        </td>
                        <td>
                            <%= shortUrl.clicks%>
                        </td>
                    </tr>

                <% }) %>
            </tbody>
        </table> 
    </div>
</body>
</html>